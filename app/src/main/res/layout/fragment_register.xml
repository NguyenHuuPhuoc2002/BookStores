                <!--                    android:layout_width="50dp"-->
                <!--                    android:layout_height="50dp"-->
                <!--                    android:src="@drawable/img_gg"-->
                <!--                    app:civ_border_color="@color/white"-->
                <!--                    tools:ignore="MissingClass,MissingConstraints" />-->
                <!--            </LinearLayout>-->
            </LinearLayout>
