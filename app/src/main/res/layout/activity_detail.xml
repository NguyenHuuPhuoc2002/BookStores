<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ECECEC"
    android:id="@+id/draw_layout"
    tools:context=".Activity.DetailActivity">
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgback"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_custom_back"
                android:elevation="10dp"
                android:src="@drawable/ic_back" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@drawable/bg_custom_toolbar"
                    android:elevation="4dp"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_nav"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_dehaze" />
                        <TextView
                            android:id="@+id/txtbook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_marginStart="120dp"
                            android:textSize="25dp"
                            android:text="Chi tiết" />

                    </LinearLayout>
                </androidx.appcompat.widget.Toolbar>
            </RelativeLayout>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="270dp"
                        android:background="@drawable/bg_custom_item_cart"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/imglove"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginTop="200dp"
                                android:layout_marginStart="-80dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_favorite_border" />

                            <ImageView
                                android:id="@+id/imgdetail"
                                android:layout_width="180dp"
                                android:layout_height="240dp"
                                android:src="@drawable/img_3" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tiêu đề: "
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:textStyle="italic" />

                            <TextView
                                android:id="@+id/txttitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Title"
                                android:textColor="@color/orange"
                                android:textSize="18dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tác giả: "
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:textStyle="italic" />

                            <TextView
                                android:id="@+id/txtauthor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="2dp"
                                android:text="Tác giả"
                                android:textColor="@color/orange"
                                android:textSize="18dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Xuất bản: "
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:textStyle="italic" />

                            <TextView
                                android:id="@+id/txtnxb"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="2dp"
                                android:text="Nhà xuất bản"
                                android:textColor="@color/orange"
                                android:textSize="18dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Số trang: "
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:textStyle="italic" />

                            <TextView
                                android:id="@+id/txtnumpages"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="2dp"
                                android:text="Số trang"
                                android:textColor="@color/orange"
                                android:textSize="18dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Thể loại: "
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:textStyle="italic" />

                            <TextView
                                android:id="@+id/txtloai"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="2dp"
                                android:text="Loại"
                                android:textColor="@color/orange"
                                android:textSize="18dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Giá: "
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:textStyle="italic" />

                            <TextView
                                android:id="@+id/txtprice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="2dp"
                                android:text="Price"
                                android:textColor="@color/orange"
                                android:textSize="18dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnbuy"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_custombtnmua"
                            android:text="Mua"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <ImageView
                            android:id="@+id/imgaddcart"
                            android:layout_width="50dp"
                            android:layout_height="44dp"
                            android:padding="5dp"
                            android:layout_marginStart="15dp"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_custombtnmua"
                            android:src="@drawable/ic_cartt" />
                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatCheckedTextView
                        android:id="@+id/txtline"
                        android:background="@drawable/bg_custom_line"
                        android:textSize="22dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginEnd="7dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="5dp"
                        android:layout_width="match_parent"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txtdetailtitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="22dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="Chi Tiết" />
                        <TextView
                            android:id="@+id/txtdetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="5dp"
                            android:maxLines="3"
                            android:ellipsize="end"
                            android:textSize="18dp"
                            android:textColor="@color/black"
                            android:text="Chi Tiết" />
                        <TextView
                            android:id="@+id/readMoreButton"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtdetail"
                            android:textSize="18dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="#F7555E8A"
                            android:text="Xem thêm"
                            android:onClick="onReadMoreButtonClick"/>
                        <TextView
                            android:id="@+id/hidelessButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtdetail"
                            android:layout_gravity="center"
                            android:textSize="19dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="#F7555E8A"
                            android:text="Ẩn bớt"
                            android:visibility="gone"
                            android:onClick="onHideContentButtonClick"/>
                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatCheckedTextView
                        android:id="@+id/txtline2"
                        android:background="@drawable/bg_custom_line"
                        android:textSize="22dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginEnd="7dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="5dp"
                        android:layout_width="match_parent"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:paddingBottom="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="7dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bình luận"
                                android:textSize="19dp"
                                android:textColor="@color/black"
                                android:layout_marginStart="7dp"
                                android:layout_marginBottom="5dp"/>
                            <TextView
                                android:id="@+id/txtCountComment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(0)"
                                android:textSize="19dp"
                                android:textColor="@color/black"
                                android:layout_marginStart="7dp"
                                android:layout_marginBottom="5dp"/>
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rcvComment"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:background="@color/white"
                            android:layout_marginTop="7dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:orientation="vertical">
                                <EditText
                                    android:id="@+id/edtMess"
                                    android:layout_width="320dp"
                                    android:layout_height="40dp"
                                    android:background="@drawable/bg_customsearch"
                                    android:padding="7dp"
                                    android:ems="10"
                                    android:inputType="text"
                                    android:text="" />
                            </LinearLayout>
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnSend"
                                android:layout_width="40dp"
                                android:layout_marginStart="10dp"
                                android:textColor="@color/white"
                                android:background="@drawable/icon_send"
                                android:layout_height="40dp"
                                android:text="" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </RelativeLayout>

    </FrameLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigation_drawer"
        android:layout_gravity="start"
        app:itemTextColor="@color/gray"
        app:itemIconTint="@color/gray"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu_chitiet"/>
</androidx.drawerlayout.widget.DrawerLayout>